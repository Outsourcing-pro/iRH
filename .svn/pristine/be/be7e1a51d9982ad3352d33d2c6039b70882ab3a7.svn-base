            },
            renderPage(){
                GetHealthEventCheckList({
                    pkid: this.$router.currentRoute.params.id
                }).then(res => {
                    this.data = res.data;
                })
            }
        },
        watch: {
		    TypeId: function (val, oldVal) {// 切换类型，重新拉取数据
            	this.renderPage();
		    }
		}
	};
</script>

